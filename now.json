{
  "version": 2,

  "env": {
    "auth_link": "@auth_link",
    "spotify_client_id":"@spotify_client_id",
    "spotify_client_secret": "@spotify_client_secret",
    "redirect_uri": "@redirect_uri",
    "jwt_secret": "@jwt_secret"
  },

  "builds": [
    {
      "src": "*.ts",
      "use": "@now/node"
    },
    {
      "src": "src/*.ts",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/callback/*",
      "dest": "server.ts"
    },
    {
      "src": "/graphql/*",
      "dest": "/src/gqlServer.ts"
    },
    {
      "src": "/",
      "status": 308,
      "headers": {
        "Location": "https://accounts.spotify.com/authorize?response_type=code&client_id=be1ce429ce1e4c5182dfd81abc83ff0e&scope=playlist-modify-private%20playlist-read-private%20user-library-read%20user-top-read&redirect_uri=https%3A%2F%2Fspotify-gql-playground.blatayuze.now.sh%2Fcallback%2F"
      }
    }
  ]
}
