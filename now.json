{
  "version": 2,

  "env": {
    "auth_link": "@auth_link",
    "spotify_client_id":"@spotify_client_id",
    "spotify_client_secret": "@spotify_client_secret",
    "redirect_uri": "@redirect_uri",
    "jwt_secret": "@jwt_secret"
  },

  "builds": [
    {
      "src": "*.ts",
      "use": "@now/node"
    },
    {
      "src": "src/*.ts",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/callback/*",
      "dest": "server.ts"
    },
    {
      "src": "/graphql/*",
      "dest": "/src/gqlServer.ts"
    }
  ]
}
